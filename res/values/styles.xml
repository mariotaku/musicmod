<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="Theme" parent="@style/Theme.ActionBarCompat">
		<item name="android:windowTitleBackgroundStyle">@style/Widget.ActionBar</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowShowWallpaper">true</item>
		<item name="android:windowBackground">@drawable/default_background</item>
	</style>

	<style name="Theme.MusicBrowser">
		<item name="vpiTitlePageIndicatorStyle">@style/Widget.TitlePageIndicator.MusicBrowser</item>
	</style>

	<style name="Theme.MusicPlayback">
		<item name="android:windowBackground">@drawable/music_playback_background</item>
	</style>

	<style name="Widget.TitlePageIndicator.MusicBrowser" parent="Widget.TitlePageIndicator">
		<item name="selectedBold">false</item>
	</style>

	<style name="Widget.ActionBar">
		<item name="android:background">@drawable/actionbar_background</item>
	</style>

</resources>